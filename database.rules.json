{
	"rules": {
		"users": {
			"$uid": {
				".read": "$uid == auth.uid",
				".write": "$uid == auth.uid",
				"tasks": {
					"done": {
						"$task": {
							"name": {
								".validate": "newData.val().length <= 150 && newData.val().length > 0"
							},
							"description": {
								".validate": "newData.val().length <= 1000"
							},
							"createdAt": {
								".validate": "newData.isNumber()"
							},
							"updatedAt": {
								".validate": "newData.isNumber()"
							},
							"spentSeconds": {
								".validate": "newData.isNumber()"
							},
							"$other": {
								".validate": false
							}
						}
					},
					"todo": {
						"$task": {
							"name": {
								".validate": "newData.val().length <= 150 && newData.val().length > 0"
							},
							"description": {
								".validate": "newData.val().length <= 1000"
							},
							"createdAt": {
								".validate": "newData.isNumber()"
							},
							"updatedAt": {
								".validate": "newData.isNumber()"
							},
							"spentSeconds": {
								".validate": "newData.isNumber()"
							},
							"$other": {
								".validate": false
							}
						}
					},
					"$other": {
						".validate": false
					}
				},
				"$other": {
					".validate": false
				}
			}
		},
		"$other": {
			".validate": false
		}
	}
}
