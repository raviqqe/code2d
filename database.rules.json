{
	"rules": {
		"users": {
			"$uid": {
				".read": "$uid == auth.uid",
				".write": "$uid == auth.uid",
				"taskList": {},
				"tasks": {
					"$task": {
						"name": {
							".validate": "newData.val().length <= 150"
						},
						"description": {
							".validate": "newData.val().length <= 1000"
						},
						"done": {
							".validate": "newData.isBoolean()"
						},
						"$other": {
							".validate": false
						}
					}
				},
				"$other": {
					".validate": false
				}
			}
		},
		"$other": {
			".validate": false
		}
	}
}
