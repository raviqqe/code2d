{
	"database": {
		"rules": "database.rules.json"
	},
	"storage": {
		"rules": "storage.rules"
	},
	"hosting": {
		"public": "app/build",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [{
			"source": "/functions/article",
			"function": "article"
		}, {
			"source": "/functions/book",
			"function": "book"
		}, {
			"source": "/functions/video",
			"function": "video"
		}, {
			"source": "/functions/topSalesBooks",
			"function": "topSalesBooks"
		}]
	}
}
