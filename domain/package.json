{
  "name": "domain-layer",
  "version": "0.1.0",
  "scripts": {
    "postinstall": "mv dist/* ."
  },
  "private": true,
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "jest": "^21.2.1",
    "ts-jest": "^21.1.4",
    "ts-loader": "^3.1.1",
    "typescript": "^2.6.1"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "transform": {
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testEnvironment": "node",
    "testRegex": "/__tests__/.+\\.ts$",
    "mapCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "modulePathIgnorePatterns": [
      "coverage",
      "dist"
    ]
  }
}
